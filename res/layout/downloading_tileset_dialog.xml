<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/progress_tileset_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Tileset: "/>

    <TextView
        android:id="@+id/progress_tileset_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/test_progress_spinner"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Preparing.."/>

    <ProgressBar
        android:id="@+id/test_progress_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress_tileset_name"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
